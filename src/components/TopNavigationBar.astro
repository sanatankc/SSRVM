              <div class="subMenu flex flex-col">
                {item.submenu.map((subMenuItem) => (
                  <a 
                    href={subMenuItem.link}
                    data-menu-mobile-item
                    class="relative py-[14px] px-5 mr-8 max-md:mr-0 w-full text-black font-semibold hover:underline pl-10"
