---
import scribble from "../../fillers/scribble.png";

interface Props {
  type:
    | "h1"
    | "h2"
    | "h3"
    | "h4"
    | "base"
    | "lg"
    | "regular"
    | "sm"
    | "xs"
    | "subtitle"
    | "p"
    | "span";
  class?: string;
  style?: {};
}

const { type = "base", class: className, style = {}, ...props } = Astro.props;
---

{
  type === "h1" && (
    <h1
      class:list={[
        "font-display font-extrabold text-[56px] max-md:text-[2rem] [&>span]:text-primary  leading-[120%]",
        className,
      ]}
      style={style}
      {...props}
    >
      <slot />
    </h1>
  )
}
{
  type === "h2" && (
    <h2
      class:list={[
        `font-display font-extrabold text-5xl max-md:text-[2rem] 
         [&>span]:text-yellow-500 
         [&>span]:italic
         text-blue-500 
         leading-[120%]
        `,
        className,
      ]}
      style={style}
      {...props}
    >
      <slot />
    </h2>
  )
}
{
  type === "h3" && (
    <h3
      class:list={[
        "text-[2.5rem] font-display font-extrabold max-md:text-2xl [&>span]:text-primary  leading-[120%]",
        className,
      ]}
      style={style}
      {...props}
    >
      <slot />
    </h3>
  )
}
{
  type === "h4" && (
    <h2
      class:list={["text-2xl tracking-tight font-display fontfont-extrabold", className]}
      style={style}
      {...props}
    >
      <slot />
    </h2>
  )
}
{
  type === "p" && (
    <p
      class:list={["text-lg max-md:text-base", className]}
      style={style}
      {...props}
    >
      <slot />
    </p>
  )
}
{
  type === "span" && (
    <span
      class:list={["text-lg max-md:text-base", className]}
      style={style}
      {...props}
    >
      <slot />
    </span>
  )
}

{
  type === "lg" && (
    <div
      class:list={["text-2xl font-bold tracking-tight", className]}
      class="max-md:text-lg"
      style={style}
      {...props}
    >
      <slot />
    </div>
  )
}
{
  type === "base" && (
    <div
      class:list={["text-xl max-md:text-base", className]}
      style={style}
      {...props}
    >
      <slot />
    </div>
  )
}
{
  type === "regular" && (
    <div
      class:list={["text-lg max-md:text-base", className]}
      style={style}
      {...props}
    >
      <slot />
    </div>
  )
}

{
  type === "sm" && (
    <div class:list={["text-base", className]} style={style} {...props}>
      <slot />
    </div>
  )
}

{
  type === "xs" && (
    <div class:list={["text-base", className]} style={style} {...props}>
      <slot />
    </div>
  )
}

{
  type === "subtitle" && (
    <div
      class:list={[
        "text-xl max-md:text-base uppercase font-extrabold text-center",
        className,
      ]}
      style={{
        letterSpacing: "0.1em",
        ...style,
      }}
      {...props}
    >
      <slot />
    </div>
  )
}
